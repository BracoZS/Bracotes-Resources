{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource",
  "type": "array",
  "minItems": 0,
  "items": {
    "type": "object",
    "required": ["id", "name", "url", "description", "categories"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "name": { "type": "string" },
      "url": { "type": "string", "format": "uri" },
      "description": { "type": "string" },
      "categories": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 1
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "additionalProperties": false
  }
}
